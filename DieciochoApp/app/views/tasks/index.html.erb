<div class="row">
  <div class="col">
    <h1>Tareas</h1>
  </div>
</div>

<div class="row tasks">

  <% @tasks.each do |task| %>
  <div class="col-md-3 tasks__item">
    <div class="card">
      <img class="card-img-top" src="<%= task.image %>" alt="<%= task.name %>">
      <div class="card-body">
        <h4 class="card-title"><%= task.name %></h4>
        <%= link_to 'Ver tarea', task, class: 'btn btn-primary btn-sm' %>
        <a href="<%= task_completedtasks_path(task) %>" class="btn btn-success btn-sm" data-method="post">Completar tarea</a>
      </div>
    </div>
  </div>
  <% end %>

</div>
